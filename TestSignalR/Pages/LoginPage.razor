@page "/signin"

    <h3>Login</h3>
    <AuthorizeView>
        <Authorized>
            Вы уже в системе!
        </Authorized>
        <NotAuthorized>
           
            <form method="post" action="login">
                <input class="form-control col-4" type="text" name="userName" />
                <input class="form-control col-4" type="password" name="passWord" />
